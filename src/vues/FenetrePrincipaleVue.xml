<BorderPane xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Bières">
                    <items>
                        <MenuItem text="Lister les bières" onAction="#MListerBiere" />
                        <MenuItem text="Ajouter une bière" onAction="#MAjouterBiere" />
                        <MenuItem text="Modifier la quantité en stock" onAction="#MModifierStockBiere" />
                        <MenuItem text="Archiver/désarchiver une bière" onAction="#MArchiveBiere" />
                    </items>
                </Menu>

                <Menu text="Alcools">
                    <items>
                        <MenuItem text="Lister les alcools" onAction="#" />
                        <MenuItem text="Ajouter une alcool" onAction="#MAjouterAlcool" />
                        <MenuItem text="Modifier la quantité en stock" onAction="#MModifierStockAlcool" />
                        <MenuItem text="Archiver/désarchiver un alcool" onAction="#MArchiveAlcool" />
                    </items>
                </Menu>



                <Menu text="Quitter">
                    <items>
                        <MenuItem text="Quitter le programme" onAction="#MQuitter" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>